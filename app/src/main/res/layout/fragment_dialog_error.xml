<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.ui.DialogErrorFragment">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="82dp"
                android:layout_gravity="center"
                android:layout_height="82dp"
                android:background="@drawable/ic_baseline_error_24"
                android:layout_marginTop="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:id="@+id/text_view_title"
                android:layout_marginStart="25dp"
                android:fontFamily="@font/nunitosans_bold"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="25dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:text="@string/wallet_error_message"
                tools:layout_editor_absoluteY="106dp" />


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="35dp"
                android:textSize="14sp"
                android:id="@+id/text_view_description"
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="@font/nunitosans_regular"
                android:layout_marginTop="16dp"
                android:text="Revisa tu conexion a Internet o intentalo mas tarde."
                android:textColor="@android:color/black"
                android:textAlignment="center"
                android:layout_height="wrap_content">
            </androidx.appcompat.widget.AppCompatTextView>

            <Button
                android:id="@+id/button_aceptar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="22dp"
                android:layout_marginEnd="22dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="16dp"
                android:text="Aceptar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />



        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>